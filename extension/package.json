{
  "name": "power-automate-utility",
  "displayName": "Power Automate Utility",
  "description": "IntelliSense for Power Automate and Logic App expressions, either in blank text files to help with UI or custom definition.json files",
  "version": "1.0.3",
   "repository": "https://github.com/wyattdave/power-automate-utility",
  "publisher":"PowerDevBox",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:plaintext"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "powerAutomateUtility.showInfo",
        "title": "Power Automate Utility: Show Function Count"
      },
      {
        "command": "powerAutomateUtility.viewSkillFile",
        "title": "Power Automate Utility: View Skill File"
      },
      {
        "command": "powerAutomateUtility.deleteSkillFile",
        "title": "Power Automate Utility: Delete Skill File"
      },
      {
        "command": "powerAutomateUtility.signIn",
        "title": "Power Automate Utility: Sign In to Environment"
      },
      {
        "command": "powerAutomateUtility.listFlows",
        "title": "Power Automate Utility: List Flows"
      },
      {
        "command": "powerAutomateUtility.openFlow",
        "title": "Power Automate Utility: Open Flow ClientData"
      },
      {
        "command": "powerAutomateUtility.updateFlow",
        "title": "Power Automate Utility: Update Flow ClientData",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "powerAutomateUtility.toggleIntellisense",
        "title": "Power Automate Utility: Toggle IntelliSense"
      },
      {
        "command": "powerAutomateUtility.showConnectionReferences",
        "title": "Power Automate Utility: Show Connection References"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "powerAutomateUtility.updateFlow",
          "when": "resourceFilename =~ /\\.clientdata\\.json$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Power Automate Utility",
      "properties": {
        "powerAutomateUtility.referencePath": {
          "type": "string",
          "default": "",
          "description": "Path to the expression-functions-reference.md file. If empty, uses the bundled reference."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "vscode": "^1.1.37"
  }
}
